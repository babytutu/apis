  box-sizing: border-box;
}

//字体
body {
  *{
    //取消safari点击高亮默认效果
    -webkit-tap-highlight-color: rgba(255,255,255,0);

    // 移除safari原生控件样式
    -webkit-appearance:none;

    // safari使用具有回弹效果的滚动
    -webkit-overflow-scrolling: touch;
  }
}

